<?xml version="1.0" encoding="UTF-8"?>
    <configuration debug="true" >
        <!--控制台-->
        <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
            <encoder  class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                <pattern>%d{yyyy/MM/dd HH:mm:ss:SSS} %level [%thread] %class:%line > %msg%n</pattern>
            </encoder >
        </appender>
        <!-- 文件输出日志 (文件大小策略进行文件输出，超过指定大小对文件备份)-->
        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <!--<File>src/main/resources/log/log.log</File>-->
            <File>/home/zhipengwu/download/bo.che/training2.git/target/log.log</File>
            <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
                <!--<FileNamePattern>src/main/resources/log/log.log.%i.bak</FileNamePattern>-->
                <FileNamePattern>/home/zhipengwu/download/bo.che/training2.git/target/log.log.%i.bak</FileNamePattern>
                <MinIndex>1</MinIndex>
                <MaxIndex>12</MaxIndex>
            </rollingPolicy>
            <triggeringPolicy            class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
                <MaxFileSize>100MB</MaxFileSize>
            </triggeringPolicy>
            <layout class="ch.qos.logback.classic.PatternLayout">
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36}　%class:%line > %msg%n</Pattern>
            </layout>
        </appender>

        <root level="DEBUG">
            <appender-ref ref="stdout" />
            <appender-ref ref="FILE" />
        </root>
    </configuration>